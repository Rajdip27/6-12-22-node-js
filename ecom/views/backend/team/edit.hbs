<main id="main" class="main">

  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item"><a href="/admin/team">Team</a></li>
        <li class="breadcrumb-item active">Edit</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->
  <section class="section">

      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <div class="mt-4 mb-4">
                <h2 class="mt-5 mb-5 border border-success bg-success text-white rounded   " style="text-align: center;">Team Edit</h5>

              </div>
            <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger">
          </div>

            <!-- Floating Labels Form -->
            
            <form class="row g-3 my-3" method="post" action="/admin/team/{{team.id}}/update"encType="multipart/form-data">
              <div class="col-md-12">
                <div class="form-floating">
                  <input type="text" value="{{team.name}}" class="form-control" placeholder="Name" name="name">
                  <label>Name</label>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-floating">
                  <input type="text" value="{{team.designation}}" class="form-control" placeholder="Designation" name="designation">
                  <label>Designation</label>
                </div>
              </div>
              <div class="col-md-12">
                <label>Image</label>
                {{!-- <div class="form-floating">
                     <img src="/{{team.image}}" width="200px" alt="{{team.title}}">
                  <input type="file" value="{{team.title}}" class="form-control" placeholder="Image"
                    name="image">
                  
                </div> --}}
                <div>
                {{!-- <label for="formFileLg" class="form-label">Image</label> --}}
                <img src="/{{team.image}}" width="200px" class="border border-warning mb-1" alt="{{team.title}}">

                <input class="form-control form-control-lg" id="formFileLg" placeholder="Image" name="image" type="file">
              </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" value="{{team.facebook}}" class="form-control" placeholder="Facebook" name="facebook">
                  <label>Facebook</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" value="{{team.twitter}}" class="form-control" placeholder="Twitter" name="twitter">
                  <label>Twitter</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" value="{{team.instagram}}" class="form-control" placeholder="Instagram" name="instagram">
                  <label>Instagram</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" value="{{team.linked}}" class="form-control" placeholder="Linked" name="linked">
                  <label>Linked</label>
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
            </form><!-- End floating Labels Form -->

          </div>
        </div>

      </div>
  </section>

</main><!-- End #main -->