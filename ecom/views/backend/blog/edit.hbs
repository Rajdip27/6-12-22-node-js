<main id="main" class="main">

  <div class="pagetitle">
    <h1> Blog Update</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item"><a href="/admin/blog">Blog</a></li>
        <li class="breadcrumb-item active">Edit</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section dashboard">
    <div class="card">
      <div class="card-body">
        <div class="mt-4 mb-4">
                <h2 class="mt-5 mb-5 border border-success bg-success text-white rounded   " style="text-align: center;">Blog Edit</h5>

              </div>
          <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger">
          </div>

          <!-- Floating Labels Form -->
          <form class="row g-3" method="POST" action="/admin/blog/{{blog.id}}/update" encType="multipart/form-data">
            <div class="col-md-6">
              <div class="form-floating">
                <input type="text" value="{{blog.title}}" class="form-control form-control-sm" id="floatingName"
                  placeholder="Title" name="title">
                <label for="floatingName">Title</label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-floating">
                <input type="text" value="{{blog.slug}}" class="form-control form-control-sm" id="floatingName"
                  placeholder="Slug" name="slug">
                <label for="floatingName">Slug</label>
              </div>
            </div>


            <div class="col-12">
              <div class="form-floating">
                <textarea class="form-control form-control-sm" name="details" placeholder="Address"
                  id="floatingTextarea" style="height: 100px;">{{blog.details}}</textarea>
                <label for="floatingTextarea">Details</label>
              </div>
            </div>
            <div class="col-md-12">
              <label for="floatingCity">Image</label>
              <div class="col-md-12">

                {{!-- <div class="form-floating">
                  <img src="/{{blog.image}}" width="200px" class="border border-info mb-1" alt="{{blog.title}}">
                  <input type="file" class="form-control form-control-sm" name="image" id="floatingCity">

                </div> --}}
                <div>
                  {{!-- <label for="formFileLg" class="form-label">Image</label> --}}
                  <img src="/{{blog.image}}" width="200px" class="border border-info mb-1" alt="{{blog.title}}">
                  <input class="form-control form-control-lg" id="formFileLg" placeholder="Image" name="image"
                    type="file">
                </div>
              </div>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
          </form><!-- End floating Labels Form -->

      </div>
    </div>
  </section>
</main>